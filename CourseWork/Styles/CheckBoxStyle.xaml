<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--       Цвета       -->
    <!--
    #0c1222 - тёмно-синий (dark blue)
    #1a2d4d - синий (blue)
    #6b7c90 - серо-голубой (dark azure)
    #91a8ba - голубой (azure)
    #d4ced8 - серо-розовый (grey pink)-->

    <Style x:Key="AzureCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
</ResourceDictionary>