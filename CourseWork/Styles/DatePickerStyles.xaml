<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--       Цвета       -->
    <!--
 #c69459 - золотой (gold)
 #0c1222 - тёмно-синий (dark blue)
 #1a2d4d - синий (blue)
 #6b7c90 - серо-голубой (dark azure)
 #91a8ba - голубой (azure)
 #d4ced8 - серо-розовый (grey pink)-->

    <!-- Стиль синий (текст голубой) -->
    <Style x:Key="BlueAsureDatePickerStyle" TargetType="DatePicker">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#1a2d4d"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#91a8ba"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style TargetType="DatePickerTextBox" x:Key="DatePickerTextBoxStyle" >
        <Setter Property="Background" Value="#1a2d4d"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
    </Style>

    <Style x:Key="DateTimeCalendarStyle" TargetType="Calendar">
        <Setter Property="Background" Value="#91a8ba"/>
        <Setter Property="Foreground" Value="#1a2d4d"/>
        <Setter Property="BorderBrush" Value="#c69459"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

</ResourceDictionary>