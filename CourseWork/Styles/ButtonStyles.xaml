<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--       Цвета       -->
    <!--
    #c69459 - золотой (gold)
    #0c1222 - тёмно-синий (dark blue)
    #1a2d4d - синий (blue)
    #6b7c90 - серо-голубой (dark azure)
    #91a8ba - голубой (azure)
    #d4ced8 - серо-розовый (grey pink)-->

    <!-- Стиль тёмно-синий (текст голубой) -->
    <Style x:Key="DarkBlueAsureButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#0c1222"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Стиль голубой (текст тёмно-синий) -->
    <Style x:Key="AsureDarkBlueButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#0c1222"/>
        <Setter Property="Foreground" Value="#1a2d4d"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Стиль синий (текст голубой) -->
    <Style x:Key="BlueAsureButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#1a2d4d"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Стиль голубой (текст синий) -->
    <Style x:Key="AsureBlueButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#91a8ba"/>
        <Setter Property="Foreground" Value="#1a2d4d"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Доп.кнопка. Стиль тёмно-синий -->
    <Style x:Key="DarkBlueSubButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#0c1222"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Доп.кнопка. Стиль синий -->
    <Style x:Key="BlueSubButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#1a2d4d"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Доп.кнопка. Стиль серо-голубой -->
    <Style x:Key="DarkAzureSubButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#6b7c90"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Доп.кнопка. Стиль голубой -->
    <Style x:Key="AzureSubButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Доп.кнопка. Стиль серо-розовый -->
    <Style x:Key="GreyPinkSubButtonStyle" TargetType="Button">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="{x:Null}"/>
        <Setter Property="Foreground" Value="#d4ced8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>
</ResourceDictionary>