<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--       Цвета       -->
    <!--
    #0c1222 - тёмно-синий (dark blue)
    #1a2d4d - синий (blue)
    #6b7c90 - серо-голубой (dark azure)
    #91a8ba - голубой (azure)
    #d4ced8 - серо-розовый (grey pink)-->

    <!-- Стиль comboBox голубой -->
    <Style x:Key="AzureComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="#0c1222"/>
        <Setter Property="Foreground" Value="#91a8ba"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="#91a8ba"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль элементов comboBox синий -->

    <Style x:Key="BlueComboBoxItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Background" Value="#91a8ba"/>
        <Setter Property="Foreground" Value="#0c1222"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="BorderBrush" Value="#0c1222"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

</ResourceDictionary>