<Page x:Class="CourseWork.Pages.RoomReservationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1800"
      d:Width="1920"
      Title="RoomReservationsPage">

    <StackPanel Background="#91a8ba">
        <Grid Background="#0c1222">
            <TextBlock Text="Novotel" Style="{StaticResource BlueTextBlockStyle}" FontSize="22" Padding="5 0" VerticalAlignment="Bottom"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="filterHiddenButton" Click="FilterHiddenButton_Click"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/filterIcon.png"/>
                </Button>

                <Button x:Name="userProfileButton"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/userProfileIcon.png"/>
                </Button>

                <Button x:Name="closeProjectButton" Click="CloseProjectButton_Click"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/crossGoldIcon.png"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="filterGrid" Background="#1a2d4d">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="215"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Цена-->
            
            <TextBlock Text="Цена, руб" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="0" Grid.ColumnSpan="2"/>

            <TextBox x:Name="placeholderPriceFromTextBox" 
                     Width="70" 
                     Text="От"
                     IsHitTestVisible="False"
                     Style="{StaticResource DarkAzureTextBoxStyle}"
                     PreviewTextInput="priceFrom_PreviewTextInput" Grid.Row="1"/>

            <TextBox x:Name="priceFromTextBox" 
                     Width="70" 
                     Style="{StaticResource AzureTextBoxStyle}"
                     PreviewTextInput="priceFrom_PreviewTextInput" Grid.Row="1" TextChanged="PriceFromTextBox_TextChanged"/>


            <TextBox x:Name="placeholderPriceUpToTextBox" 
                     Width="70" 
                     Text="До"
                     Style="{StaticResource DarkAzureTextBoxStyle }"
                     PreviewTextInput="priceUpTo_PreviewTextInput"
                     Grid.Row="1"
                     Grid.Column="1"/>

            <TextBox x:Name="priceUpToTextBox" 
                     Width="70" 
                     Style="{StaticResource AzureTextBoxStyle}"
                     PreviewTextInput="priceUpTo_PreviewTextInput"
                     Grid.Row="1"
                     Grid.Column="1"
                     TextChanged="PriceUpToTextBox_TextChanged"/>

            <!--Дата-->

            <TextBlock Text="Заезд" Grid.Column="2" FontSize="18" Style="{StaticResource AzureTextBlockStyle}"/>

            <DatePicker x:Name="BookingDatePicker" 
                        Grid.Column="2" Grid.Row="1" 
                        Style="{StaticResource BlueAsureDatePickerStyle}" CalendarStyle="{StaticResource DateTimeCalendarStyle}"
                        SelectedDate="{Binding SelectedStartDate}" 
                        SelectedDateChanged="BookingDatePicker_SelectedDateChanged"/>

            <TextBlock Text="Выезд" Grid.Column="3" FontSize="18" Style="{StaticResource AzureTextBlockStyle}"/>

            <DatePicker x:Name="EndDatePicker" 
                        Grid.Column="3" Grid.Row="1" 
                        Style="{StaticResource BlueAsureDatePickerStyle}" CalendarStyle="{StaticResource DateTimeCalendarStyle}"
                        SelectedDate="{Binding SelectedEndDate}"/>
            
            <!--Количество гостей-->
            
            <TextBlock Text="Количество гостей" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="4"/>

            <TextBox Name="GuestCountTextBox" Width="205" Grid.Column="4" Grid.Row="1"
                     Style="{StaticResource AzureTextBoxStyle}"
                     PreviewMouseDown="GuestCountTextBox_PreviewMouseDown" />

            <Popup Name="GuestCountPopup" PlacementTarget="{Binding ElementName=GuestCountTextBox}" 
                   Placement="Bottom" StaysOpen="True" AllowsTransparency="True" 
                   PopupAnimation="Slide">
                <Border BorderBrush="#1a2d4d" BorderThickness="2" Background="#91a8ba">
                    <StackPanel Width="200">
                        <!-- Взрослые -->
                        <Grid>
                            <TextBlock Text="Взрослые" Style="{StaticResource BlueTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="-" Width="30" Click="DecreaseAdultButton_Click" Margin="5" Style="{StaticResource BlueAsureButtonStyle}"/>
                                <TextBlock Name="AdultCountTextBlock" Width="20" TextAlignment="Center" Text="1" Style="{StaticResource BlueTextBlockStyle}"/>
                                <Button Content="+" Width="30" Click="IncreaseAdultButton_Click" Margin="5" Style="{StaticResource BlueAsureButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Дети -->
                        <Grid>
                            <TextBlock Text="Дети"  Style="{StaticResource BlueTextBlockStyle}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="-"  Width="30" Click="DecreaseChildButton_Click" Margin="5" Style="{StaticResource BlueAsureButtonStyle}"/>
                                <TextBlock Name="ChildCountTextBlock"  Width="20" Text="0"  TextAlignment="Center" Style="{StaticResource BlueTextBlockStyle}"/>
                                <Button Content="+" Width="30" Click="IncreaseChildButton_Click" Margin="5" Style="{StaticResource BlueAsureButtonStyle}"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="Закрыть" Click="ClosePopupButton_Click" Margin="0,10,0,0" Style="{StaticResource BlueAsureButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Popup>

            <!--Тип номера-->
            
            <TextBlock Text="Тип номера" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="5"/>

            <ComboBox Name="typeRoomsComboBox" Width="190" 
                      Grid.Column="5" Grid.Row="1"
                      SelectionChanged="TypeRoomsComboBox_SelectionChanged"
                      Style="{StaticResource AzureComboBoxStyle}"/>

            <!--Тип кровати-->
            
            <TextBlock Text="Кровати" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="6"/>

            <ComboBox Name="bedsComboBox" Width="190" 
                      Grid.Column="6" Grid.Row="1"
                      SelectionChanged="BedsComboBox_SelectionChanged"
                      Style="{StaticResource AzureComboBoxStyle}" HorizontalAlignment="Left"/>

            <!--Доп. услуги-->
            
            <CheckBox Grid.Column="7" Content="Питание включено" Style="{StaticResource AzureCheckBoxStyle}" VerticalAlignment="Center" />
            <CheckBox Grid.Column="7" Grid.Row="1" Content="Для инвалидов" Style="{StaticResource AzureCheckBoxStyle}" VerticalAlignment="Center" />
        </Grid>
        <Grid Width="1000" x:Name="myGrid">
        </Grid>
    </StackPanel>
</Page>
