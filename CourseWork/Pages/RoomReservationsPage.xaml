<Page x:Class="CourseWork.Pages.RoomReservationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseWork.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1800"
      d:Width="1920"
      Title="RoomReservationsPage">

    <StackPanel Background="#91a8ba">
        <Grid Background="#0c1222">
            <TextBlock Text="Novotel" Style="{StaticResource BlueTextBlockStyle}" FontSize="22" Padding="5 0" VerticalAlignment="Bottom"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="filterHiddenButton" Click="FilterHiddenButton_Click"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/filterIcon.png"/>
                </Button>

                <Button x:Name="userProfileButton"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/userProfileIcon.png"/>
                </Button>

                <Button x:Name="closeProjectButton" Click="CloseProjectButton_Click"
                        Style="{StaticResource DarkBlueAsureButtonStyle}"
                        Width="32" Margin="5">
                    <Image Source="/Icons/crossGoldIcon.png"/>
                </Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="filterGrid" Background="#1a2d4d">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Цена, руб" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="0" Grid.ColumnSpan="2"/>

            <TextBox x:Name="placeholderPriceFromTextBox" 
                     Width="70" 
                     Text="От"
                     IsHitTestVisible="False"
                     Style="{StaticResource DarkAzureTextBoxStyle}"
                     PreviewTextInput="priceFrom_PreviewTextInput" Grid.Row="1"/>

            <TextBox x:Name="priceFromTextBox" 
                     Width="70" 
                     Style="{StaticResource AzureTextBoxStyle}"
                     PreviewTextInput="priceFrom_PreviewTextInput" Grid.Row="1" TextChanged="PriceFromTextBox_TextChanged"/>


            <TextBox x:Name="placeholderPriceUpToTextBox" 
                     Width="70" 
                     Text="До"
                     Style="{StaticResource DarkAzureTextBoxStyle }"
                     PreviewTextInput="priceUpTo_PreviewTextInput"
                     Grid.Row="1"
                     Grid.Column="1"/>

            <TextBox x:Name="priceUpToTextBox" 
                     Width="70" 
                     Style="{StaticResource AzureTextBoxStyle}"
                     PreviewTextInput="priceUpTo_PreviewTextInput"
                     Grid.Row="1"
                     Grid.Column="1"
                     TextChanged="PriceUpToTextBox_TextChanged"/>
            <TextBlock Text="Количество гостей" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="2"/>

            <TextBox Name="GuestCountTextBox" Width="200" Grid.Column="2" Grid.Row="1"
         PreviewMouseDown="GuestCountTextBox_PreviewMouseDown" />

            <Popup Name="GuestCountPopup" PlacementTarget="{Binding ElementName=GuestCountTextBox}" 
       Placement="Bottom" StaysOpen="True" AllowsTransparency="True" 
       PopupAnimation="Slide">
                <Border BorderBrush="Gray" BorderThickness="1" Background="White" Padding="10">
                    <StackPanel Width="200">
                        <!-- Взрослые -->
                        <TextBlock Text="Взрослые" FontWeight="Bold" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="-" Click="DecreaseAdultButton_Click" Width="30"/>
                            <TextBlock Name="AdultCountTextBlock" Text="1" Width="50" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <Button Content="+" Click="IncreaseAdultButton_Click" Width="30"/>
                        </StackPanel>

                        <!-- Дети -->
                        <TextBlock Text="Дети" FontWeight="Bold" Margin="0,10,0,0"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="-" Click="DecreaseChildButton_Click" Width="30"/>
                            <TextBlock Name="ChildCountTextBlock" Text="0" Width="50" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" />
                            <Button Content="+" Click="IncreaseChildButton_Click" Width="30"/>
                        </StackPanel>

                        <Button Content="Закрыть" Click="ClosePopupButton_Click" Margin="0,10,0,0" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Popup>

            <TextBlock Text="Тип номера" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="3"/>

            <ComboBox Name="typeRoomsComboBox" Width="190" 
                      Grid.Column="3" Grid.Row="1"
                      SelectionChanged="TypeRoomsComboBox_SelectionChanged"
                      Style="{StaticResource AzureComboBoxStyle}"/>

            <TextBlock Text="Кровати" FontSize="18" Style="{StaticResource AzureTextBlockStyle}" Grid.Column="4"/>

            <ComboBox Name="bedsComboBox" Width="190" 
                      Grid.Column="4" Grid.Row="1"
                      SelectionChanged="BedsComboBox_SelectionChanged"
                      Style="{StaticResource AzureComboBoxStyle}" HorizontalAlignment="Left"/>

            <CheckBox Grid.Column="5" Content="Питание включено" Style="{StaticResource AzureCheckBoxStyle}" VerticalAlignment="Center" />
            <CheckBox Grid.Column="5" Grid.Row="1" Content="Для инвалидов" Style="{StaticResource AzureCheckBoxStyle}" VerticalAlignment="Center" />
        </Grid>
        <Grid Width="1000" x:Name="myGrid">
        </Grid>
    </StackPanel>
</Page>
